    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:gravity="center">
    <com.cmf.customgroupview.view.ShapeView android:id="@+id/shape_view" android:layout_marginBottom="85dp"
        android:layout_height="25dp" android:layout_width="25dp"/>
    <View
        android:layout_width="25dp" android:id="@+id/shader_view"
        android:layout_height="3dp" android:background="@drawable/loading_shader_bg"/>
    <TextView
        android:layout_width="wrap_content" android:layout_marginTop="3dp"
        android:layout_height="wrap_content" android:text="玩命加载中..."/>
</LinearLayout>